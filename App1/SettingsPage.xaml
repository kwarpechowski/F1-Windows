<Page
    x:Class="App1.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="141*" />
            <RowDefinition Height="102*" />
            <RowDefinition Height="397*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="textBox" HorizontalAlignment="Left" Margin="10,10,0,0" FontSize="36" TextWrapping="Wrap" Text="Ustawienia" VerticalAlignment="Top" />
        <TextBox Grid.Row="1"  x:Name="textBox1" Margin="10,10,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="32"/>
        <Button Grid.Row="2" x:Name="button" Content="Zapisz" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" Click="button_Click" />
    </Grid>
</Page>
